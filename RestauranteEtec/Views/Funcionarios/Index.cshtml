@model IEnumerable<RestauranteEtec.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    Lista de Funcionários
                </div>
                <hr />
                <p class="mb-3">
                    <a class="btn btn-light" asp-action="Create">Adicionar novo</a>
                </p>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cargo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ExibirHome)
                            </th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cargo.Nome)
                                </td>
                                <td>
                                    <div class="icheck-material-white">
                                        <input type="checkbox" asp-for="@item.ExibirHome" disabled />
                                        <label asp-for="@item.ExibirHome">Exibir</label>
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="mr-3 text-warning">
                                        <i class="zmdi zmdi-edit" title="Alterar"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="mr-3 text-white">
                                        <i class="zmdi zmdi-zoom-in" title="Detalhes"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">
                                        <i class="zmdi zmdi-delete" title="Excluir"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>