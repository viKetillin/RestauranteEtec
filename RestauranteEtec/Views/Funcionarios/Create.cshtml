@model RestauranteEtec.Models.Funcionario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    Adicionar funcionário
                </div>
                <hr />
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="form-row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-9 col-sm-12">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Texto" class="control-label"></label>
                                <input asp-for="Texto" class="form-control" />
                                <span asp-validation-for="Texto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CargoId" class="control-label"></label>
                                <select asp-for="CargoId" class="form-control" asp-items="ViewBag.CargoId"></select>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="OrdemExibicao" class="control-label"></label>
                                    <input asp-for="OrdemExibicao" class="form-control" />
                                    <span asp-validation-for="OrdemExibicao" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="ExibirHome" /> @Html.DisplayNameFor(model => model.ExibirHome)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12">
                            <div class="row">
                                <div class="form-group col-12">
                                    <img src="" class="img-fluid" id="PreviewImagem"/>
                                    <label asp-for="Foto" class="control-label"></label>
                                    <input type="file" asp-for="Foto" class="form-control-file" accept=".jpg, .jpeg, .png, .gif"/>
                                    <span asp-validation-for="Foto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-success mr-2" />
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        window.addEventListener('load', function () {
            document.querySelector('input[type="file"]').addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    var img = document.getElementById('PreviewImagem');
                    img.src = URL.createObjectURL(this.files[0]);
                }
            });
        });
    </script>
}
