@model RestauranteEtec.Models.Cargo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Detalhes do cargo </div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                </dl>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mr-3">Alterar</a> 
                    <a asp-action="Index" class="btn btn-light">Voltar a listagem</a>
                </div>

            </div>
        </div>
    </div>
</div>
